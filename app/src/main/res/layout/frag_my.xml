<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:fitsSystemWindows="false"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_240"
                android:background="@mipmap/user_background"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@mipmap/head_portrait" />

                <TextView
                    android:id="@+id/wallet_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="EMTC Wallet"
                    android:textColor="@color/color_ffffff"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:background="@color/color_fafafa"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="14dp"
                    android:src="@mipmap/user_icon_set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:text="basic settings"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_12"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/notice_center_id"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_icon_set"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:layout_weight="1"
                    android:text="Notification Center"
                    android:textColor="@color/color_63727D"
                    android:textSize="@dimen/sp_14"

                    />

                <TextView
                    android:id="@+id/notice_num_id"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:visibility="invisible"
                    android:background="@drawable/app_red_25dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_ffffff"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:src="@mipmap/user_icon_next"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_fallback_id"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_icon_set"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:layout_weight="1"
                    android:text="customer feedback"
                    android:textColor="@color/color_63727D"
                    android:textSize="@dimen/sp_14"

                    />

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/app_red_25dp"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/color_ffffff"
                    android:visibility="invisible"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:src="@mipmap/user_icon_next"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:background="@color/color_fafafa"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="14dp"
                    android:src="@mipmap/user_icon_security" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:text="Security center"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_12"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/change_pass_id"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_icon_set"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:layout_weight="1"
                    android:text="change password"
                    android:textColor="@color/color_63727D"
                    android:textSize="@dimen/sp_14"

                    />

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/app_red_25dp"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/color_ffffff"
                    android:visibility="invisible"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:src="@mipmap/user_icon_next"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:background="@color/color_fafafa"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="14dp"
                    android:src="@mipmap/user_icon_us" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:text="Follow us"
                    android:textColor="@color/color_727375"
                    android:textSize="@dimen/sp_12"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_protel_id"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_icon_set"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:layout_weight="1"
                    android:text="用户协议"
                    android:textColor="@color/color_63727D"
                    android:textSize="@dimen/sp_14"

                    />

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/app_red_25dp"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/color_ffffff"
                    android:visibility="invisible"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:src="@mipmap/user_icon_next"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_us_id"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_icon_set"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:layout_weight="1"
                    android:text="about us"
                    android:textColor="@color/color_63727D"
                    android:textSize="@dimen/sp_14"

                    />

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/app_red_25dp"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/color_ffffff"
                    android:visibility="invisible"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:src="@mipmap/user_icon_next"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/curr_version_id"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_icon_set"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:layout_weight="1"
                    android:text="current version"
                    android:textColor="@color/color_63727D"
                    android:textSize="@dimen/sp_14"

                    />

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/app_red_25dp"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/color_ffffff"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:src="@mipmap/user_icon_next"

                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_out"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_icon_set"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:layout_weight="1"
                    android:text="login out"
                    android:textColor="@color/color_63727D"
                    android:textSize="@dimen/sp_14"

                    />

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/app_red_25dp"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/color_ffffff"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:src="@mipmap/user_icon_next"

                    />


            </LinearLayout>

            <com.github.jdsjlzx.recyclerview.LRecyclerView
                android:id="@+id/vp_wallet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
